
<%= form_for(@message, :html => {:class => "form-horizontal"}) do |f| %>
    
    
    
    <div class= "form-group">
      <label class= "col-sm-2 control-label">名前:</label>
      <div class="col-sm-4"> 
        <%= f.text_field :name , class: "form-control" %>
      </div> 
      <div class= "col-sm-6"></div> <!-- col調整用 -->
    </div>
    
    <div class="form-group">
      <label class= "col-sm-2 control-label">内容:</label>
      <div class= "col-sm-8">
       <%= f.text_area :body, class: "form-control" %>  
      </div>
      <div class= "col-sm-2"></div>　<!-- col調整用 -->
    </div>
    
    <div class="form-group">
      <div class= "col-sm-offset-2 col-sm-10">
         <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>

<% end %>

  <div class= "col-sm-offset-2 col-sm-8 paddingZero">
    <div class = "panel panel-default">
      <div class="panel-heading">
        メッセージ一覧
      </div>  
      <div class ="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-pill label-success"><%= message.name %></span>
        <%= message.body %>
              <br/>
        <% end %>
      </div>
    </div>
  </div>
